YUI(yuiconfig).use('node', 'base-build', 'gallery-itsaformmodel', 'gallery-itsacheckbox', 'gallery-itsawidgetrenderpromise', 'promise', function(Y) {
    var template, model1, model2, container1, container2, checkboxModel1, checkboxModel2;

    // create MyFormModelClass
    Y.MyFormModel = Y.Base.create('formmodel', Y.ITSAFormModel, [], {}, {
        ATTRS: {
            firstname: {
                formtype: 'text',
                formconfig: {
                    label: 'Firstname',
                    placeholder: 'firstname'
                }
            },
            lastname: {
                formtype: 'text',
                formconfig: {
                    label: 'Lastname',
                    placeholder: 'lastname'
                }
            },
            email: {
                formtype: 'email',
                formconfig: {
                    label: 'Emailaddress',
                    placeholder: 'emailaddress'
                }
            },
            website: {
                formtype: 'url',
                formconfig: {
                    label: 'Website',
                    placeholder: 'http://'
                }
            },
            active: {
                formtype: Y.ITSACheckbox,
                formconfig: {
                    label: 'Still singing'
                }
            }
        }
    });

    // defining template
    template = '<div class="pure-control-group">{firstname}</div>'+
               '<div class="pure-control-group">{lastname}</div>'+
               '<div class="pure-control-group">{email}</div>'+
               '<div class="pure-control-group">{website}</div>'+
               '<div class="pure-control-group">{active}</div>';

    // creating models
    model1 = new Y.MyFormModel({
        firstname: 'Joe',
        lastname: 'Cocker',
        active: true
    });
    model2 = new Y.MyFormModel({
        firstname: 'Derek William',
        lastname: 'Dick',
        active: true
    });

    // insert UI-formelements using template
    container1 = Y.one('#container1');
    container2 = Y.one('#container2');
    Y.one('#container1').append(Y.Lang.sub(template, model1.toJSONUI()));
    Y.one('#container2').append(Y.Lang.sub(template, model2.toJSONUI()));

    // making the conatiners visible once rendered
    checkboxModel1 = model1.getCurrentFormElements('active')[0].widget;
    checkboxModel2 = model2.getCurrentFormElements('active')[0].widget;
    Y.batch(
        checkboxModel1.renderPromise(),
        checkboxModel2.renderPromise()
    ).then(
        function() {
            container1.removeClass('hiddencontainer');
            container2.removeClass('hiddencontainer');
        }
    );
});
