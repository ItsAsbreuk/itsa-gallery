YUI(yuiconfig).use('gallery-itsadialog', function(Y) {

    Y.getInput('De titel', 'Geef hier uw waarde tussen 2 en 10:', {
        imageButtons: true,
        value: 8,
        formconfig: {
            label: 'waarde: ',
            tooltip: 'enter value',
            required: true,
            digits: true
        },
        validator: function(val) {return (typeof val === 'number') && (val>=2) && (val<=10)},
        validationerror: 'Please enter value between 1 and 11'
    }).then(
        function(result) {
            console.log('resultaat '+result.itsamessage.get('input'));
        }
    );

    Y.getInput('De titel', 'Geef hier uw waarde tussen 200 en 300:', {
        imageButtons: true,
        value: 5,
        slider: true,
        formconfig: {
            label: 'waarde slider: ',
            tooltip: 'slide to set value',
            widgetconfig: {
                min: 5,
                max: 20
            }
        }
    }).then(
        function(result) {
            console.log('resultaat '+result.itsamessage.get('input'));
        }
    );

});
